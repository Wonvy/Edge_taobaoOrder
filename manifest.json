{
    "name": "AAA淘宝订单",
    "version": "0.0.0.1",
    "homepage_url": "https://www.bing.com",
    "options_page": "./popup/popup.html",
    "manifest_version": 3,
    "description": "执行网页代码",
    "icons": {
        "16": "icons/taobao16.png",
        "32": "icons/taobao32.png",
        "64": "icons/taobao64.png",
        "128": "icons/taobao128.png"
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },
    "permissions": [
        "sidePanel",
        "contextMenus",
        "unlimitedStorage",
        "notifications",
        "scripting",
        "activeTab",
        "tabs",
        "debugger",
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "https://buyertrade.taobao.com/*"
    ],
    "action": {
        "default_title": "Click to open panel",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-scripts/content.js"
            ]
        },
        {
        "matches": ["https://buyertrade.taobao.com/*"],
        "js": ["content-scripts/script1.js"],
        "css": ["src/css/style1.css"],
        "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "open_google": {
            "suggested_key": {
                "default": "Alt+Shift+G"
            },
            "description": "Open Google"
        },
        "open_baidu": {
            "suggested_key": {
                "default": "Alt+Shift+B"
            },
            "description": "Open Baidu"
        }
    }
}